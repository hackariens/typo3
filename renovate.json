{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "before 8am on monday"
  ],
  "packageRules": [
    {
      "description": "Mise à jour de la version Node dans .nvmrc",
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        ".nvmrc"
      ],
      "matchPackageNames": [
        "node"
      ],
      "extractVersion": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$",
      "depType": "engines",
      "versioning": "node",
      "enabled": true,
      "groupName": "Update Node.js version (.nvmrc)"
    },
    {
      "description": "Mise à jour des dépendances npm",
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm dependencies updates",
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.nvmrc$/"
      ],
      "matchStrings": [
        "^(?<depName>node)\\s*v?(?<currentValue>\\d+\\.\\d+\\.\\d+)$"
      ],
      "datasourceTemplate": "node"
    }
  ]
}
